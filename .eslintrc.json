{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"],
          ["@template", "./src/template"],
          ["@components", "./src/template/components"],
          ["@styles", "./src/template/styles"],
          ["@modules", "./src/template/modules"],
          ["@styleMixins", "./src/template/mixins/css"],
          ["@utils", "./src/template/utils"],
          ["@api", "./src/template/api"]
        ]
      }
    }
  },
  "rules": {
    "no-console": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "linebreak-style": 0,
    "no-new": 0
  }
}
